# 更改前缀
#unbind C-b
#set -g prefix C-a
set -g base-index 1
setw -g pane-base-index 1

# 重新加载配置文件
bind r source-file ~/.tmux.conf \; display "configuration Roloaded!"

# 设置256色模式
set -g default-terminal "screen-256color"

# 设置配色
# 状态栏
set -g status-style fg=white,bg=black
# 命令行
set -g message-command-style fg=white,bg=black,bright
# 窗口列表
setw -g window-status-current-style fg=white,bg=colour33
# pane color
set -g pane-border-style fg=white,bg=black
set -g pane-active-border-style fg=colour087,bg=black

#copy-mode 将快捷键设置为vi 模式
setw -g mode-keys vi

# 向其他程序发送 Ctrl-a
bind C-a send-prefix

# 分割pane
unbind '"'
unbind %
bind v split-window -h  -c '#{pane_current_path}'
bind s split-window -v  -c '#{pane_current_path}'

# 在pane之间移动
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# 调整pane大小
bind H resize-pane -L 5
bind J resize-pane -D 5
bind K resize-pane -U 5
bind L resize-pane -R 5

# 在window之间移动
bind -r C-h select-window -t :-
bind -r C-l select-window -t :+

# 配置状态栏
set -g status-left-length 40
set -g status-left "#[fg=green]Session: #S #[fg=yellow]Window:#I #[fg=cyan]Pane:#P"
set -g status-right "#[fg=cyan]%d %b %R"
# 状态栏刷新周期
set -g status-interval 60
# 窗口列表居中
set -g status-justify centre

